{
  "name": "Magic",
  "version": "1.0",
  "description": "Does magical stuff",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "*://*.quizlet.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "325": "icon.png"
  },
  "action": {
    "default_icon": {
      "325": "icon.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "mouseover.html",
        "worker.js"
      ],
      "matches": [],
      "extension_ids": []
    }
  ],
  "manifest_version": 3
}
